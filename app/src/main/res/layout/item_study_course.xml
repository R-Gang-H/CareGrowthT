<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="@dimen/margin_size_100"
        android:layout_height="@dimen/margin_size_75"
        android:layout_marginLeft="@dimen/margin_size_15"
        android:layout_marginTop="@dimen/margin_size_15"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_org_course"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_course_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_size_10"
        android:layout_marginTop="@dimen/margin_size_17"
        android:text="课程名称"
        android:textColor="@color/color_3"
        android:textSize="@dimen/text_size_15"
        app:layout_constraintLeft_toRightOf="@id/iv_logo"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_size_10"
        android:layout_marginTop="@dimen/margin_size_8"
        android:drawablePadding="@dimen/margin_size_5"
        android:gravity="center_vertical"
        android:text="年龄段"
        android:textColor="@color/color_9"
        android:textSize="@dimen/text_size_13"
        app:layout_constraintLeft_toRightOf="@id/iv_logo"
        app:layout_constraintTop_toBottomOf="@id/tv_course_name" />

    <TextView
        android:id="@+id/tv_course_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_size_10"
        android:layout_marginTop="@dimen/margin_size_8"
        android:background="#f5f6fa"
        android:gravity="center"
        android:padding="@dimen/margin_size_2"
        android:text="课程标签"
        android:textColor="#5e5e5e"
        android:textSize="@dimen/text_size_12"
        app:layout_constraintLeft_toRightOf="@id/iv_logo"
        app:layout_constraintTop_toBottomOf="@id/tv_age" />

</androidx.constraintlayout.widget.ConstraintLayout>
