<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_size_6"
    android:layout_marginRight="@dimen/margin_size_6"
    android:layout_marginTop="@dimen/margin_size_5"
    android:background="@mipmap/ic_init_data_bg">

    <ImageView
        android:id="@+id/iv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="48dp"
        android:layout_marginTop="@dimen/margin_size_10"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_add_teacher" />

    <TextView
        android:id="@+id/tv_add_teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/margin_size_80"
        android:layout_marginTop="@dimen/margin_size_15"
        android:text="添加教师"
        android:textColor="@color/color_6"
        android:textSize="@dimen/text_size_22" />

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/margin_size_3"
        android:background="@mipmap/ic_complet"
        android:gravity="center"
        android:text="无数据"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_13" />

</RelativeLayout>
