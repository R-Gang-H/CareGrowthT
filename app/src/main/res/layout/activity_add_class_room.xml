<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.caregrowtht.app.activity.AddClassRoomActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/base_title_bar" />

    <EditText
        android:id="@+id/et_class_room_name"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_below="@id/toolbar"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:hint="请输入教室名称"
        android:maxLength="10"
        android:paddingLeft="@dimen/margin_size_15"
        android:paddingRight="@dimen/margin_size_15"
        android:textColor="@color/gray2"
        android:textColorHint="@color/gray"
        android:textSize="@dimen/text_size_15" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_class_room_name"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="@dimen/margin_size_25"
        android:layout_marginTop="47dp">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_small_btn_click"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_18" />

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_small_btn_click"
            android:gravity="center"
            android:text="确认"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_18" />
    </LinearLayout>

</RelativeLayout>
