<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_size_15"
    android:visibility="visible">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_size_10"
        android:gravity="center"
        android:textColor="@color/gray2"
        android:textSize="@dimen/text_size_16" />

    <com.android.library.view.MyGridView
        android:id="@+id/gv_tch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:layout_marginLeft="@dimen/margin_size_10"
        android:layout_marginRight="@dimen/margin_size_10"
        android:layout_marginTop="@dimen/margin_size_10"
        android:horizontalSpacing="@dimen/margin_size_5"
        android:numColumns="4"
        android:verticalSpacing="@dimen/margin_size_5"
        tools:listitem="@layout/xrecy_formal_item" />

</RelativeLayout>