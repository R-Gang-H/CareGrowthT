<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.caregrowtht.app.activity.CreateOrgHintActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/base_title_bar" />

    <ImageView
        android:id="@+id/iv_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_marginStart="@dimen/margin_size_10"
        android:layout_marginTop="@dimen/margin_size_30"
        android:layout_marginEnd="@dimen/margin_size_7"
        android:scaleType="centerCrop"
        android:src="@mipmap/icon_hint" />

    <TextView
        android:id="@+id/tv_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="@dimen/margin_size_30"
        android:layout_marginEnd="@dimen/margin_size_20"
        android:layout_toEndOf="@id/iv_hint"
        android:lineSpacingExtra="8sp"
        android:text="@string/string_create_org_hint"
        android:textColor="@color/color_3"
        android:textSize="@dimen/text_size_16" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_hint"
        android:layout_marginTop="@dimen/margin_size_30" />

    <RelativeLayout
        android:id="@+id/rl_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/recycler_view"
        android:background="@color/color_f4" />

    <Button
        android:id="@+id/btn_go_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin_size_10"
        android:background="@mipmap/ic_long_btn_normal"
        android:text="继续创建"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_18" />

</RelativeLayout>
