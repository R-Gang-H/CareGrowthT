<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_orgIntro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_size_10"
        android:layout_marginRight="@dimen/margin_size_10"
        android:layout_marginTop="@dimen/margin_size_10"
        android:text="介绍\n介绍\n"
        android:textColor="@color/color_3"
        android:textSize="@dimen/text_size_15" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_10"
        android:background="@color/color_f4" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_size_20"
        android:background="@mipmap/ic_org_qrcode"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_org_qrcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="二维码" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/margin_size_8"
        android:layout_marginTop="@dimen/margin_size_10"
        android:text="欢迎登陆"
        android:textColor="@color/color_3"
        android:textSize="@dimen/text_size_20" />

    <TextView
        android:id="@+id/tv_links_web"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/margin_size_30"
        android:layout_marginTop="@dimen/margin_size_6"
        android:linksClickable="true"
        android:text="www.1bu2bu.com"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_size_15" />

</LinearLayout>