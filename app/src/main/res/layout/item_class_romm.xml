<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="53dp">

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="@dimen/margin_size_35"
        android:layout_height="@dimen/margin_size_35"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/margin_size_15"
        android:scaleType="center"
        android:src="@mipmap/ic_room" />

    <TextView
        android:id="@+id/tv_room_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/margin_size_15"
        android:layout_toEndOf="@id/iv_image"
        android:gravity="center_vertical"
        android:text="教室名称"
        android:textColor="@color/col_a"
        android:textSize="@dimen/text_size_15" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_0.5"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/margin_size_10"
        android:layout_marginRight="@dimen/margin_size_10"
        android:background="@color/col_e8" />

</RelativeLayout>