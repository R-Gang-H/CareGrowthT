<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    app:cardCornerRadius="@dimen/margin_size_5"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_course_type"
            android:layout_width="@dimen/margin_size_100"
            android:layout_height="50dp"
            android:background="@drawable/selector_course_down"
            android:gravity="center"
            android:text="我的课表"
            android:textColor="@drawable/selector_color_white_black"
            android:textSize="@dimen/text_size_14" />

        <ImageView
            android:id="@+id/iv_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_size_0.5"
            android:background="#e4effb" />
    </LinearLayout>

</androidx.cardview.widget.CardView>
