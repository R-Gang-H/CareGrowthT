<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_sign_levae"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_sign_leave_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_size_12"
        android:layout_marginTop="@dimen/margin_size_10"
        android:scaleType="center"
        android:src="@mipmap/ic_type_course" />

    <TextView
        android:id="@+id/tv_sign_leave_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_size_10"
        android:layout_marginTop="@dimen/margin_size_10"
        android:layout_toEndOf="@id/iv_sign_leave_type"
        android:text="学员请假"
        android:textColor="@color/col_t9"
        android:textSize="@dimen/text_size_18" />

    <TextView
        android:id="@+id/iv_sign_leave_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="@dimen/margin_size_3"
        android:background="@mipmap/ic_y_update"
        android:gravity="center"
        android:text="有更新"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_13" />

    <TextView
        android:id="@+id/tv_org_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_sign_leave_type"
        android:layout_marginTop="@dimen/margin_size_15"
        android:layout_marginBottom="@dimen/margin_size_15"
        android:ellipsize="end"
        android:lineSpacingExtra="9dp"
        android:maxLines="4"
        android:paddingLeft="@dimen/margin_size_12"
        android:paddingRight="@dimen/margin_size_12"
        android:text="北京美吉姆国际儿童教育中心"
        android:textColor="@color/color_9"
        android:textSize="@dimen/text_size_15" />

    <TextView
        android:id="@+id/tv_sign_leave_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_org_name"
        android:layout_marginStart="@dimen/margin_size_12"
        android:layout_marginEnd="@dimen/margin_size_12"
        android:layout_marginBottom="@dimen/margin_size_15"
        android:background="@drawable/shape_state_edf6ff_bg"
        android:ellipsize="end"
        android:lineSpacingExtra="9dp"
        android:maxLines="3"
        android:padding="@dimen/margin_size_8"
        android:text="4月18日  星期三  9:00 \n刘晓霞  舞蹈课周四9:00班"
        android:textColor="@color/color_3"
        android:textSize="@dimen/text_size_15"
        tools:ignore="HardcodedText" />

    <RelativeLayout
        android:id="@+id/rl_sign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_sign_leave_content"
        android:layout_marginStart="@dimen/margin_size_12"
        android:layout_marginEnd="@dimen/margin_size_12"
        android:layout_marginBottom="@dimen/margin_size_15"
        android:gravity="center_vertical">

        <cn.carbs.android.avatarimageview.library.AvatarImageView
            android:id="@+id/iv_levae_author_avatar"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@mipmap/ic_per_avatar_default" />

        <TextView
            android:id="@+id/tv_leave_author_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/margin_size_5"
            android:layout_toEndOf="@id/iv_levae_author_avatar"
            android:text="姓名"
            android:textColor="@color/color_3"
            android:textSize="@dimen/text_size_15" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_stu_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_sign"
        android:layout_marginStart="@dimen/margin_size_15"
        android:layout_marginEnd="@dimen/margin_size_15"
        android:layout_marginBottom="@dimen/margin_size_8"
        android:text="学员 4人 | 签到 0人  | 请假 0人 | 待处理 4人"
        android:textColor="@color/color_9"
        android:textSize="@dimen/text_size_15" />

    <RelativeLayout
        android:id="@+id/cl_rb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_stu_detail"
        android:layout_marginLeft="@dimen/margin_size_11"
        android:layout_marginRight="@dimen/margin_size_11"
        android:layout_marginBottom="@dimen/margin_size_15"
        android:background="@drawable/shape_state_handler_bg"
        android:paddingBottom="@dimen/margin_size_15">

        <TextView
            android:id="@+id/tv_in_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_size_10"
            android:layout_marginTop="@dimen/margin_size_15"
            android:text="收入情况"
            android:textColor="@color/color_3"
            android:textSize="@dimen/text_size_15" />

        <TextView
            android:id="@+id/tv_in_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/margin_size_15"
            android:layout_marginEnd="@dimen/margin_size_15"
            android:text="4月16日 星期二"
            android:textColor="@color/color_9"
            android:textSize="@dimen/text_size_14" />

        <View
            android:id="@+id/v_line1"
            android:layout_width="@dimen/margin_size_1"
            android:layout_height="match_parent"
            android:layout_below="@id/tv_in_detail"
            android:layout_alignBottom="@id/tv_day_xk_monery"
            android:layout_marginStart="@dimen/margin_size_10"
            android:layout_marginTop="@dimen/margin_size_20"
            android:background="@color/color_C" />

        <TextView
            android:id="@+id/tv_day_xk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_in_detail"
            android:layout_marginStart="@dimen/margin_size_10"
            android:layout_marginTop="@dimen/margin_size_20"
            android:layout_toEndOf="@id/v_line1"
            android:text="今日消课"
            android:textColor="@color/color_9"
            android:textSize="@dimen/text_size_13" />

        <TextView
            android:id="@+id/tv_day_xk_monery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_day_xk"
            android:layout_marginStart="@dimen/margin_size_10"
            android:layout_marginTop="@dimen/margin_size_8"
            android:layout_toEndOf="@id/v_line1"
            android:text="2400元"
            android:textColor="@color/color_3"
            android:textSize="@dimen/text_size_15" />

        <View
            android:id="@+id/v_line2"
            android:layout_width="@dimen/margin_size_1"
            android:layout_height="match_parent"
            android:layout_below="@id/v_line1"
            android:layout_alignBottom="@id/tv_month_xk_monery"
            android:layout_marginStart="@dimen/margin_size_10"
            android:layout_marginTop="@dimen/margin_size_20"
            android:background="@color/color_C" />

        <TextView
            android:id="@+id/tv_month_xk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/v_line1"
            android:layout_marginStart="@dimen/margin_size_10"
            android:layout_marginTop="@dimen/margin_size_20"
            android:layout_toEndOf="@id/v_line1"
            android:text="本月消课"
            android:textColor="@color/color_9"
            android:textSize="@dimen/text_size_13" />

        <TextView
            android:id="@+id/tv_month_xk_monery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_month_xk"
            android:layout_marginStart="@dimen/margin_size_10"
            android:layout_marginTop="@dimen/margin_size_8"
            android:layout_toEndOf="@id/v_line1"
            android:text="2400元"
            android:textColor="@color/color_3"
            android:textSize="@dimen/text_size_15" />

        <View
            android:id="@+id/v_line3"
            android:layout_width="@dimen/margin_size_1"
            android:layout_height="match_parent"
            android:layout_below="@id/tv_in_detail"
            android:layout_alignBottom="@id/tv_day_xz_monery"
            android:layout_marginStart="@dimen/margin_size_42"
            android:layout_marginTop="@dimen/margin_size_20"
            android:layout_toEndOf="@id/tv_day_xk"
            android:background="@color/color_C" />

        <TextView
            android:id="@+id/tv_day_xz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_in_detail"
            android:layout_marginStart="@dimen/margin_size_10"
            android:layout_marginTop="@dimen/margin_size_20"
            android:layout_toEndOf="@id/v_line3"
            android:text="今日新增"
            android:textColor="@color/color_9"
            android:textSize="@dimen/text_size_13" />

        <TextView
            android:id="@+id/tv_day_xz_monery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_day_xz"
            android:layout_marginStart="@dimen/margin_size_10"
            android:layout_marginTop="@dimen/margin_size_8"
            android:layout_toEndOf="@id/v_line3"
            android:text="2400元"
            android:textColor="@color/color_3"
            android:textSize="@dimen/text_size_15" />

        <View
            android:id="@+id/v_line4"
            android:layout_width="@dimen/margin_size_1"
            android:layout_height="match_parent"
            android:layout_below="@id/v_line3"
            android:layout_alignBottom="@id/tv_month_xz_monery"
            android:layout_marginStart="@dimen/margin_size_42"
            android:layout_marginTop="@dimen/margin_size_20"
            android:layout_toEndOf="@id/tv_month_xk"
            android:background="@color/color_C" />

        <TextView
            android:id="@+id/tv_month_xz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/v_line3"
            android:layout_marginStart="@dimen/margin_size_10"
            android:layout_marginTop="@dimen/margin_size_20"
            android:layout_toEndOf="@id/v_line4"
            android:text="本月新增"
            android:textColor="@color/color_9"
            android:textSize="@dimen/text_size_13" />

        <TextView
            android:id="@+id/tv_month_xz_monery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_month_xz"
            android:layout_marginStart="@dimen/margin_size_10"
            android:layout_marginTop="@dimen/margin_size_8"
            android:layout_toEndOf="@id/v_line4"
            android:text="2400元"
            android:textColor="@color/color_3"
            android:textSize="@dimen/text_size_15" />

        <View
            android:id="@+id/v_line5"
            android:layout_width="@dimen/margin_size_1"
            android:layout_height="match_parent"
            android:layout_below="@id/tv_in_detail"
            android:layout_alignBottom="@id/tv_day_tf_monery"
            android:layout_marginStart="@dimen/margin_size_42"
            android:layout_marginTop="@dimen/margin_size_20"
            android:layout_toEndOf="@id/tv_day_xz"
            android:background="@color/color_C" />

        <TextView
            android:id="@+id/tv_day_tf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_in_detail"
            android:layout_marginStart="@dimen/margin_size_10"
            android:layout_marginTop="@dimen/margin_size_20"
            android:layout_toEndOf="@id/v_line5"
            android:text="今日支出"
            android:textColor="@color/color_9"
            android:textSize="@dimen/text_size_13" />

        <TextView
            android:id="@+id/tv_day_tf_monery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_day_xz"
            android:layout_marginStart="@dimen/margin_size_10"
            android:layout_marginTop="@dimen/margin_size_8"
            android:layout_toEndOf="@id/v_line5"
            android:text="2400元"
            android:textColor="@color/color_3"
            android:textSize="@dimen/text_size_15" />

        <View
            android:id="@+id/v_line6"
            android:layout_width="@dimen/margin_size_1"
            android:layout_height="match_parent"
            android:layout_below="@id/v_line5"
            android:layout_alignBottom="@id/tv_month_tf_monery"
            android:layout_marginStart="@dimen/margin_size_42"
            android:layout_marginTop="@dimen/margin_size_20"
            android:layout_toEndOf="@id/tv_month_xz"
            android:background="@color/color_C" />

        <TextView
            android:id="@+id/tv_month_tf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/v_line5"
            android:layout_marginStart="@dimen/margin_size_10"
            android:layout_marginTop="@dimen/margin_size_20"
            android:layout_toEndOf="@id/v_line5"
            android:text="本月支出"
            android:textColor="@color/color_9"
            android:textSize="@dimen/text_size_13" />

        <TextView
            android:id="@+id/tv_month_tf_monery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_month_xz"
            android:layout_marginStart="@dimen/margin_size_10"
            android:layout_marginTop="@dimen/margin_size_8"
            android:layout_toEndOf="@id/v_line5"
            android:text="2400元"
            android:textColor="@color/color_3"
            android:textSize="@dimen/text_size_15" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_check_all"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_40"
        android:layout_below="@id/cl_rb"
        android:layout_marginStart="@dimen/margin_size_15"
        android:layout_marginEnd="@dimen/margin_size_15"
        android:layout_marginBottom="@dimen/margin_size_15"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_check_detial"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/margin_size_6"
            android:layout_weight="1"
            android:background="@drawable/add_circle_corner_transparent_bg"
            android:gravity="center"
            android:text="查看详情"
            android:textColor="@color/color_6"
            android:textSize="@dimen/text_size_15" />

        <TextView
            android:id="@+id/tv_check_all"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_size_6"
            android:layout_weight="1"
            android:background="@drawable/shape_round_corner_green"
            android:gravity="center"
            android:text="查看全部"
            android:textColor="@color/greenLight"
            android:textSize="@dimen/text_size_15" />

    </LinearLayout>

    <View
        android:id="@+id/v_line_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_1"
        android:layout_below="@id/ll_check_all"
        android:layout_marginStart="@dimen/margin_size_16"
        android:layout_marginEnd="@dimen/margin_size_16"
        android:layout_marginBottom="@dimen/margin_size_10"
        android:background="@color/color_e6" />

    <TextView
        android:id="@+id/tv_sign_leave_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/v_line_1"
        android:layout_marginStart="@dimen/margin_size_15"
        android:layout_marginBottom="@dimen/margin_size_10"
        android:text="04月17日 18:30  更新"
        android:textColor="@color/color_6"
        android:textSize="@dimen/text_size_12" />

</RelativeLayout>
