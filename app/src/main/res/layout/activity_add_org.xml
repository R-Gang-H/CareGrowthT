<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.caregrowtht.app.activity.AddOrgActivity">

    <include
        android:id="@+id/title_bar"
        layout="@layout/base_title_bar" />

    <cn.carbs.android.avatarimageview.library.AvatarImageView
        android:id="@+id/iv_avatar"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@id/title_bar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:src="@mipmap/ic_logo_default"
        app:civ_border_color="#DDDDDD"
        app:civ_border_width="2dp" />

    <TextView
        android:id="@+id/tv_org_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_avatar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_size_20"
        android:text="北京金色雨林清河校区"
        android:textColor="@color/gray2"
        android:textSize="@dimen/text_size_16" />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_org_name"
        android:layout_marginLeft="@dimen/margin_size_10"
        android:layout_marginTop="@dimen/margin_size_50"
        android:background="@drawable/selector_small_btn_click"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_18"
        app:layout_goneMarginTop="@dimen/margin_size_40" />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_org_name"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/margin_size_50"
        android:layout_marginRight="@dimen/margin_size_10"
        android:background="@drawable/selector_small_btn_click"
        android:gravity="center"
        android:text="确认"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_18" />

    <TextView
        android:id="@+id/tv_excut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@mipmap/ic_small_btn_normal"
        android:gravity="center"
        android:text="已加入该机构"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_18"
        android:visibility="gone" />

</RelativeLayout>
