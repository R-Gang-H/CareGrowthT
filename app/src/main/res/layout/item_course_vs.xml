<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:layout_weight="1"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/iv_course_icon"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/margin_size_13"
        app:cardBackgroundColor="@color/blue"
        app:cardCornerRadius="@dimen/margin_size_9"
        app:cardElevation="0dp" />

    <TextView
        android:id="@+id/tv_course_type"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/margin_size_10"
        android:layout_toEndOf="@id/iv_course_icon"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLength="9"
        android:maxLines="1"
        android:text="无课程分类"
        android:textColor="@color/gray2"
        android:textSize="@dimen/text_size_15" />

    <EditText
        android:id="@+id/et_number"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toStartOf="@id/tv_unit"
        android:background="@null"
        android:gravity="center_vertical|end"
        android:hint="请输入"
        android:inputType="number"
        android:maxLines="1"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_unit"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/margin_size_18"
        android:layout_marginStart="@dimen/margin_size_3"
        android:gravity="center_vertical|end"
        android:text="次"
        android:textColor="@color/gray2"
        android:textSize="15sp" />

    <CheckBox
        android:id="@+id/tv_select_course"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/margin_size_10"
        android:button="@null"
        android:drawableLeft="@drawable/selector_all_check"
        android:drawablePadding="@dimen/margin_size_8"
        android:padding="@dimen/margin_size_18"
        android:textColor="@color/gray2"
        android:visibility="gone"
        android:textSize="@dimen/text_size_15" />

</RelativeLayout>