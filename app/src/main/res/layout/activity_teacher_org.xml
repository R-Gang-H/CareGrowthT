<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_tob"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/blueHome"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_my_course"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@null"
            android:drawableTop="@mipmap/ic_my_course"
            android:drawableRight="@mipmap/ic_down"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingRight="@dimen/margin_size_6"
            android:text="我的课程"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_student"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@null"
            android:drawableTop="@mipmap/ic_student"
            android:gravity="center"
            android:paddingTop="14dp"
            android:text="学员"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_org_course"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@null"
            android:drawableTop="@mipmap/ic_course_statist"
            android:gravity="center"
            android:paddingTop="14dp"
            android:text="通知管理"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_act"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@null"
            android:drawableTop="@mipmap/ic_more"
            android:gravity="center"
            android:paddingTop="14dp"
            android:text="更多"
            android:textColor="@color/white"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ll_tob"
        android:orientation="horizontal" />

</RelativeLayout>
