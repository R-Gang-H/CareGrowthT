<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/margin_size_30"
    android:layout_gravity="end"
    android:background="@drawable/selector_rv_item">

    <TextView
        android:id="@+id/tv_class_times"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:hint="2018年7月19日  9:00～10:00"
        android:textColor="@color/gray2"
        android:textSize="@dimen/text_size_15" />

    <ImageView
        android:id="@+id/iv_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_size_6"
        android:layout_toEndOf="@id/tv_class_times"
        android:src="@mipmap/ic_del_time" />

</RelativeLayout>

