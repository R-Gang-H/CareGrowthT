<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_comment_popup"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/margin_size_8"
    android:paddingTop="@dimen/margin_size_8">

    <TextView
        android:id="@+id/item_like"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:clickable="true"
        android:drawableLeft="@mipmap/ic_follow_no1"
        android:drawablePadding="8dp"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="取消"
        android:textColor="#fff"
        android:textSize="14sp" />

    <ImageView
        android:layout_width="@dimen/margin_size_0.5"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/black"
        android:paddingBottom="@dimen/margin_size_10"
        android:paddingTop="@dimen/margin_size_10" />

    <TextView
        android:id="@+id/item_comment"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:clickable="true"
        android:drawableLeft="@mipmap/ic_comm_num"
        android:drawablePadding="6dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="评论"
        android:textColor="#fff"
        android:textSize="14sp" />

</LinearLayout>