<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_add_aicz"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/iv_add_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/margin_size_1"
        android:background="@mipmap/ic_pending"
        android:gravity="center"
        android:text="待处理"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_13" />

    <TextView
        android:id="@+id/tv_welcom_aicz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_size_15"
        android:text="欢迎加入爱成长"
        android:textColor="@color/color_3"
        android:textSize="@dimen/text_size_18" />

    <TextView
        android:id="@+id/tv_add_aicz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_welcom_aicz"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_size_25"
        android:text="如果您的机构已加入爱成长"
        android:textColor="@color/color_3"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_add_org"
        android:layout_width="160dp"
        android:layout_height="45dp"
        android:layout_below="@id/tv_add_aicz"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@mipmap/ic_enrolment_num"
        android:gravity="center"
        android:text="加入机构"
        android:textColor="#A3D65C"
        android:textSize="@dimen/text_size_18" />

    <View
        android:id="@+id/v_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_1"
        android:layout_below="@id/btn_add_org"
        android:layout_marginStart="@dimen/margin_size_16"
        android:layout_marginTop="@dimen/margin_size_15"
        android:layout_marginEnd="@dimen/margin_size_16"
        android:background="@color/color_e6" />

    <TextView
        android:id="@+id/tv_create_org"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/v_line"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_size_25"
        android:text="如果您的机构还没加入爱成长"
        android:textColor="@color/color_3"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_create_org"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_create_org"
        android:layout_centerHorizontal="true"
        android:background="@drawable/selector_small_btn_click"
        android:gravity="center"
        android:text="创建机构"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_18" />

    <View
        android:id="@+id/v_line_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_1"
        android:layout_below="@id/btn_create_org"
        android:layout_marginStart="@dimen/margin_size_16"
        android:layout_marginEnd="@dimen/margin_size_16"
        android:background="@color/color_e6" />

    <TextView
        android:id="@+id/tv_add_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/v_line_1"
        android:layout_marginStart="@dimen/margin_size_15"
        android:layout_marginTop="@dimen/margin_size_15"
        android:layout_marginBottom="@dimen/margin_size_10"
        android:text="7月4日  17:50"
        android:textColor="@color/color_6"
        android:textSize="@dimen/text_size_12" />

</RelativeLayout>
