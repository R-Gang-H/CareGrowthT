<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_org"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_size_16"
        android:layout_marginTop="@dimen/margin_size_17"
        android:background="@drawable/selector_add_inst"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_size_16"
        android:layout_marginLeft="@dimen/margin_size_16"
        android:layout_marginTop="@dimen/margin_size_20"
        android:text="姓名"
        android:textColor="@color/color_3"
        android:textSize="@dimen/text_size_15"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="17dp"
        app:layout_constraintTop_toBottomOf="@id/tv_name" />

    <EditText
        android:id="@+id/et_other"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_size_16"
        android:layout_marginLeft="@dimen/margin_size_16"
        android:layout_marginRight="@dimen/margin_size_16"
        android:layout_marginTop="@dimen/margin_size_15"
        android:background="@drawable/add_circle_corner_green_bg"
        android:gravity="top"
        android:minLines="5"
        android:padding="10dp"
        android:text="如果是因为其他原因要举报,请输入"
        android:textColor="@color/col_aaa"
        android:textSize="@dimen/margin_size_15"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tv_name" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_0.5"
        android:layout_marginLeft="@dimen/margin_size_10"
        android:layout_marginRight="@dimen/margin_size_10"
        android:background="@color/col_e8"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
